# Django Settings
SECRET_KEY=your-secret-key-here-generate-with-generate_secret_key.py
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Database
# For local development, use: postgresql://user:password@localhost:5432/dbname
# For Northflank, this will be provided by the PostgreSQL addon
DATABASE_URL=postgresql://user:password@host:5432/database

# Email Configuration (Optional - for contact form)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
CONTACT_EMAIL=your-email@example.com
